<div class="small-12 large-10 columns nopadding page-right-content"  ng-controller="groupsCtrl">
    <div class="page-title">
        <p class="left">Create Group</p>
        <div class="right">
            <ul class="button-group">
                <li><a href="/groups" role="button" class="btn">Cancel</a></li>
                <li class="active"><button class="btn" ng-click="submitCreateGroupForm()">Save</button>
                    <!--<a href="#" role="button" class="btn" data-action="submit" data-form="createAccountForm">Save</a>-->
                </li>
            </ul>
        </div>
    </div>
    <!--Content Here-->
    <div class="page-wrapper scrollable no-overflow-x full-height">
        <div class="row padtop20 padleft30 padright20">
            <div class="small-12 columns">
                <form id="createGroupForm" class="form nomargin" action="/" method="POST">
                    <div>
                        <label for="gName">Group Name</label>
                        <input id="gName" name="gName" type="text"/>

                        <div style="margin-bottom: 10px;">
                            <label for="gMembers">Members</label>
                            <select name="gMembers" id="gMembers" multiple class="chosen-select" data-placeholder="Add Group Members...">
                                {{#each data.users}}
                                    <option value="{{_id}}" {{#inArray ../data.group.members _id}} selected="selected" {{/inArray}}>{{fullname}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div style="margin-bottom: 85px;">
                            <label for="gSendMailTo">Send Mail To:</label>
                            <select name="gSendMailTo" id="gSendMailTo" multiple class="chosen-select" data-placeholder="Select Send Mail Users...">
                                {{#each data.users}}
                                    <option value="{{_id}}" {{#inArray ../data.group.sendMailTo _id}} selected="selected" {{/inArray}}>{{fullname}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#contentFor 'js-plugins'}}
    <script type="text/javascript">

    </script>
{{/contentFor}}