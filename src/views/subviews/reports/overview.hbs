        require(['pages/reports', 'metricsgraphics'], function(r) {
            r.init();
            MG.data_graphic({
                data: [
                    {'date':new Date('2014-11-01'),'value':12},
                    {'date':new Date('2014-11-02'),'value':18},
                    {'date':new Date('2014-11-03'),'value':13},
                    {'date':new Date('2014-11-04'),'value':16},
                    {'date':new Date('2014-11-05'),'value':22}
                ],
                full_width: true,
                height: 250,
                target: '#test',
                x_accessor: 'date',
                y_accessor: 'value',
                show_tooltips: false
            })
        });
