<div class="uk-modal" id="ticketCreateModal" ng-controller="ticketsCtrl">
    <div class="uk-modal-dialog">
        <form class="uk-form-stacked" id="createTicketForm" action="#" method="POST">
            <input type="hidden" name="socketId" id="socketId" value="{{data.user.socket.id}}" />
            <div class="uk-margin-medium-bottom">
                <label for="ticket_subject">Subject</label>
                <input type="text" class="md-input" id="ticket_subject" name="ticket_subject"/>
            </div>
            <div class="uk-margin-medium-bottom">
                <label for="ticket_description">Description</label>
                <textarea class="md-input" id="ticket_description" name="ticket_description"></textarea>
            </div>
            <div class="uk-margin-medium-bottom">
                <label for="ticket_group" class="uk-form-label">Group</label>
                <select class="uk-form-width-full selectize-white" name="ticket_group" id="ticket_group" data-md-selectize-inline>
                    {{#each data.common.groups}}
                        <option value="{{{_id}}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="uk-margin-medium-bottom clearfix">
                <div class="left" style="padding-right: 10px; width: 30%;">
                    <label for="ticket_type" class="uk-form-label">Type</label>
                    <select class="selectize-white" name="ticket_type" id="ticket_type" data-md-selectize-inline>
                        {{#each data.common.ticketTypes}}
                            <option value="{{{_id}}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="left" style="width: 70%;">
                    <label for="ticket_tags" class="uk-form-label">Tags</label>
                    <select name="ticket_tags" id="ticket_tags" class="chosen-select1 selectize-white" multiple data-md-selectize-inline data-md-selectize-bottom="true">
                        {{#each data.common.ticketTags}}
                            <option id="TAG__{{_id}}" value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>



            </div>
            <div class="uk-margin-medium-bottom">
                <label for="ticket_priority" class="uk-form-label">Priority</label>
                <div>
                            <span class="icheck-inline">
                                <input class="with-gap" type="radio" name="ticket_priority" id="task_priority_minor" data-md-icheck checked />
                                <label for="task_priority_minor" class="inline-label"><span class="uk-badge uk-badge-success">Normal</span></label>
                            </span>
                            <span class="icheck-inline">
                                <input class="with-gap" type="radio" name="ticket_priority" id="task_priority_critical" data-md-icheck />
                                <label for="task_priority_critical" class="inline-label"><span class="uk-badge uk-badge-warning">Urgent</span></label>
                            </span>
                            <span class="icheck-inline">
                                <input class="with-gap" type="radio" name="ticket_priority" id="task_priority_blocker" data-md-icheck />
                                <label for="task_priority_blocker" class="inline-label"><span class="uk-badge uk-badge-danger">Critical</span></label>
                            </span>
                </div>
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button type="button" class="md-btn md-btn-flat uk-modal-close">Close</button>
                <button type="button" class="md-btn md-btn-flat md-btn-flat-primary" id="submitNewTicket" ng-click="test($event)">Create Ticket</button>
            </div>
        </form>
    </div>
</div>